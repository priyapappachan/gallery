<p id="notice"><%= notice %></p>

<b>Tags :   </b>
<%= raw @resource.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>


<%= image_tag @resource.pic.url %>

<h2>Add a comment:</h2>
<%= form_for([@resource, @resource.comments.build]) do |f| %>
  
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

