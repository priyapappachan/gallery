<h1>New image</h1>

<%= form_for :resource ,url: "/resources/", :html => { :multipart => true } do |f| %>
  <% if @resource.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@resource.errors.count, "error") %> prohibited
      this image from being saved:</h2>
    <ul>
    <% @resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<div class="control-group">

     <b> Picture </b><br/>
	<div class="controls">
     <%= f.file_field :pic %>
     </div>

</div>
<div class="control-group">
      <%= f.label :tags, "Tags (separated by commas)", :class => 'control-label'  %>
      <div class="controls">
        <%= f.text_field :tag_list, :class => 'text_field' %>
      </div>
    </div>


<div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary'  %>
      <%= link_to 'Cancel', resources_path, :class => 'btn' %>
    </div>
  
<% end %>

