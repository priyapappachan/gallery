<h1>New resource</h1>

<%= form_for :resource ,url: "/resources/", :html => { :multipart => true } do |f| %>
<p>
     <b> Picture </b><br/>
     <%= f.file_field :pic %>
</p>
<p>
	<%= f.label :tags, "Tags (separated by commas)" %><br />
	<%= f.text_field :tag_list %>
</p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', resources_path %>
