
<html>
<div align="right"> <%= link_to 'Edit', edit_resource_path(@resource) %> | <%= link_to 'Back', resources_path %> | <%= link_to 'Delete', resource_path(@resource), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

